@model Macro_Model.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover produto </h1>

<h3>Tem certeza que deseja remover este produto do cadastro?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nutricional)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nutricional)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Restricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        
    </form>
</div>
